@model AJ_MVC_Application.Models.Subject

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Subject</h4>
<hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <div class="mb-3 row">
            <label asp-for="SubjectCode" class="col-sm-2 col-form-label">Subject Code</label>
            <div class="col-sm-10">
                <input type="text" placeholder="@Model.SubjectCode" class="form-control" disabled />
                <input type="hidden"  asp-for="SubjectCode">
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="SubjectDescription" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="SubjectDescription">
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="SubjectUnits" class="col-sm-2 col-form-label">Subject Units</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="SubjectUnits">
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="SubjectRegOffering" class="col-sm-2 col-form-label">Year Offering</label>
            <div class="col-sm-10">
                <select class="form-select" asp-for="SubjectRegOffering" aria-expanded="false">
                    <option disabled selected>Category</option>
                    <option class="form-select" value="1">1st Semester</option>
                    <option class="form-select" value="2">2nd Semester</option>
                </select>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="SubjectCategory" class="col-sm-2 col-form-label">Subject Category</label>
            <div class="col-sm-10">
                <input type="text" placeholder="@Model.SubjectCategory" class="form-control" disabled />
                <input type="hidden" asp-for="SubjectCategory">
            </div>
        </div>
        <input type="hidden" asp-for="SubjectStatus" class="form-control" />
        <div class="mb-3 row">
            <label asp-for="SubjectCourseCode" class="col-sm-2 col-form-label">Subject Course</label>
            <div class="col-sm-10">
                <input type="text" placeholder="@Model.SubjectCourseCode" class="form-control" disabled />
                <input type="hidden" asp-for="SubjectCourseCode">
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="SubjectCurrCode" class="col-sm-2 col-form-label">Subject Curricculum</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="SubjectCurrCode">
            </div>
        </div>
        <div class="container text-center">
            <div class="row align-content-lg-end">
                <div class="col">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
        </form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
